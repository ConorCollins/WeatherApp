@page "/weather"
@inject WeatherService WeatherService

<div class="container mt-5">
    <h3 class="text-center mb-4">Current Weather</h3>

    <div class="input-group mb-3">
        <input @bind="city" class="form-control" placeholder="Enter city name" />
        <button class="btn btn-primary" @onclick="GetWeather">Get Weather</button>
    </div>
    <br /><br />

    @if (weatherResponse != null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <div class="card" style="width: 25rem;">
                <div class="card-body bg-warning text-dark">
                    <h4 class="card-title border-bottom text-center mb-3">
                        <strong>Weather in @weatherResponse.Location.Name, @weatherResponse.Location.Country</strong>
                    </h4>
                    <div class="text-center">
                        <!-- Center-align all content -->
                        <p class="mb-2"><strong>Current Temperature:</strong> @weatherResponse.Current.temp_c °C</p>
                        <p class="mb-2"><strong>Feels Like:</strong> @weatherResponse.Current.feelslike_c °C</p>
                        <p class="mb-2"><strong>Humidity:</strong> @weatherResponse.Current.humidity %</p>
                        <p class="mb-2"><strong>Wind:</strong> @weatherResponse.Current.wind_kph kph</p>
                        <p class="mb-2"><strong>Wind Chill:</strong> @weatherResponse.Current.windchill_c °C</p>
                        <p class="mb-2"><strong>Cloud Coverage:</strong> @weatherResponse.Current.cloud %</p>
                        <p class="mb-2"><strong>UV Index:</strong> @weatherResponse.Current.uv</p>
                    </div>
                </div>
            </div>
        </div>


    }
    else if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger mt-3">
            @errorMessage
        </div>
    }
</div>

@code {
    private string city;
    private WeatherResponse weatherResponse;
    private string errorMessage;

    private async Task GetWeather()
    {
        errorMessage = null; // Reset any previous error
        weatherResponse = await WeatherService.GetWeatherAsync(city);

        if (weatherResponse == null)
        {
            errorMessage = "Could not retrieve weather data. Please check the city name or try again later.";
        }
    }
}


