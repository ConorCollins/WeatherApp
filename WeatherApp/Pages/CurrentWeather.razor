@page "/weather"
@inject WeatherService WeatherService

<div class="container mt-5">
    <h3 class="text-center mb-4">Current Weather</h3>

    <div class="input-group mb-3">
        <input @bind="city" class="form-control" placeholder="Enter city name" />
        <button class="btn btn-primary" @onclick="GetWeather">Get Weather</button>
    </div>

    @if (weatherResponse != null)
    {
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Weather in @weatherResponse.Location.Name, @weatherResponse.Location.Country</h4>
                <hr />
                <p><strong>Current Temperature:</strong> @weatherResponse.Current.temp_c °C</p>
                <p><strong>Feels Like:</strong> @weatherResponse.Current.feelslike_c °C</p>
                <p><strong>Humidity:</strong> @weatherResponse.Current.humidity %</p>
                <p><strong>Wind:</strong> @weatherResponse.Current.wind_kph kph</p>
                <p><strong>Wind Chill:</strong> @weatherResponse.Current.windchill_c °C</p>
                <p><strong>Cloud Coverage:</strong> @weatherResponse.Current.cloud %</p>
                <p><strong>UV Index:</strong> @weatherResponse.Current.uv</p>
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger mt-3">
            @errorMessage
        </div>
    }
</div>

@code {
    private string city;
    private WeatherResponse weatherResponse;
    private string errorMessage;

    private async Task GetWeather()
    {
        errorMessage = null; // Reset any previous error
        weatherResponse = await WeatherService.GetWeatherAsync(city);

        if (weatherResponse == null)
        {
            errorMessage = "Could not retrieve weather data. Please check the city name or try again later.";
        }
    }
}


