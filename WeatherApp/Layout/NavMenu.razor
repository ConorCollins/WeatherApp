<div class="top-row navbar navbar-dark bg-primary">
    <div class="container-fluid">
        <!-- Navbar Brand -->
        <a class="navbar-brand" href="#">WeatherApp</a>

        <!-- Navbar Toggler (for mobile view) -->
        <button title="Navigation menu" class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<!-- Navigation Menu -->
<div class="@NavMenuCssClass nav-scrollable bg-light">
    <nav class="nav flex-column">
        <!-- Home Link -->
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Forecast Link -->
        <div class="nav-item">
            <NavLink class="nav-link" href="forecast">
                <span class="bi bi-calendar-week" aria-hidden="true"></span> 3 Day Forecast
            </NavLink>
        </div>

        <!-- Weather Link -->
        <div class="nav-item">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-cloud-sun" aria-hidden="true"></span> Current Weather
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

